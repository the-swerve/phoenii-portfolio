<h2>Reports</h2>

<table>
  <tr>
    <th>Content</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @reports.each do |report| %>
  <tr>
    <td><%= report.content %></td>
    <td><%= link_to 'Show', business_report_path(@business,report) %></td>
    <td><%= link_to 'Edit', edit_business_report_path(@business, report) %></td>
    <td><%= link_to 'Destroy', business_report_path(@business,report), confirm: 'Are you sure?', method: :delete %></td>
  </tr>
<% end %>
</table>

<br />

<% if current_user.business %>
  <%= link_to 'Create a New Report', new_business_report_path(current_user.business) %>
<% end %>
