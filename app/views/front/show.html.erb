
<% unless current_user %>

  <%= image_tag "vertDivider.png", :id => "vertDivider", :alt => "" %>
	
	<div id="membership">
		<div id="login">
			<div class="button"><a href="#login-open" id="loginOpen">Login</a></div>
      <div id="loginBox">
        <%= form_tag sessions_path do %>
        <div class="input-bg" id="inputEmail-bg">
          <input type="text" class="textInput" name="email" maxlength="50" title="Email" placeholder="Email" /><br />
        </div>
          
        <div class="input-bg" id="inputEmail-bg">
          <input type="password" class="textInput" name="password" maxlength="50" title="Password" placeholder="Password" /><br />
          </div>
				<input name="commit" id="loginButton" type="submit" value="Login" />
        <% end %>
      </div>
		</div>

    <div id="apply">
			<div class="button"><a href="#apply-open" id="applyOpen">Apply</a></div>
			<div id="applyBox">
				<a href="#investor-open" id="investorOpen">Investor</a><br />
				<div id="investorBox">
          <%= form_for @user do |f| %>
          <%= render :partial => 'layouts/form_errors', :locals => {:object => @user} %>
					<div class="input-bg">
						<input type="text" class="textInput" name="user[name]" maxlength="30" title="Name" placeholder="Name" /></br>
					</div>
					<div class="input-bg">
						<input type="text" class="textInput" name="user[email]" maxlength="30" title="Email" placeholder="Email" /></br>
					</div>
          <input type="hidden" name="user[role]" value="Investor" />
					<input name="commit" id="loginButton" type="submit" value="Register" />
          <% end %>
				</div>
				<br />
				<a href="#entrepreneur-open" id="entOpen">Entrepreneur</a><br />
				<div id="entBox">
          <%= form_for @user do |f| %>
					<div class="input-bg">
						<input type="text" class="textInput" name="user[name]" maxlength="30" title="Name" placeholder="Name" /></br>
					</div>
					<div class="input-bg">
						<input type="text" class="textInput" name="user[email]" maxlength="30" title="Email" placeholder="Email" /></br>
					</div>
          <input type="hidden" name="user[role]" value="Entrepreneur" />
					<input name="commit" id="loginButton" type="submit" value="Register" />
          <% end %>
				</div>
      </div>
    </div>

  </div>

<% end %>
