<h2>Business Card</h2>

  <div class="business_card_expanded">
    <h4><%= link_to @business.name, @business %></h4>
    <div id="image">
      <%= image_tag @business.photo.url(:medium) %>
    </div>
    <p id="blurb"><%= @business.desc %></p>
    <div id="progress_bar"></div>
    <p id="investments">
      <b>Goal:</b> <%= number_to_currency(@business.goal_investment) %> | 
      <b>Invested:</b> <%= number_to_currency(@business.invested_amount) %>
    </p>
    <p id="equity">
      <b>Equity offered:</b> <%= @business.equity_offered %>% | 
      <b>Given:</b> <%= @business.equity_given %>%
    </p>
    <% inv = current_user.investments.find {|i| i.business == @business} %>
    <% if inv %>
      <p id="view_investment">You invested! <%= link_to "View Your Investment", business_investment_path(@business,inv) %></p>
    <% elsif !inv && !current_user.business %>
      <p id="invest"><%= link_to 'Invest', new_business_investment_path(@business) %></p>
    <% end %>
    <% if current_user.business %>
      <p><%= link_to 'Edit', edit_business_path(@business) %></p>
    <% end %>
  </div>

